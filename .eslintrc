{
  "parser": "babel-eslint",
  "env": {
    "jest": true
  },
  "rules": {
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error"
  },
  "plugins": [
    "import"
  ],
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    },
    "react": {
      "version": "16.5.2"
    }
  }
}
