{
  "parser": "babel-eslint",
  "env": {
    "jest": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error"
  },
  "plugins": [
    "import"
  ],
  "extends": ["airbnb"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    },
    "react": {
      "version": "16.5.2"
    }
  }
}
